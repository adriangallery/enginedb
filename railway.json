{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.bot",
    "watchPatterns": [
      "src/**",
      "scripts/**",
      "Dockerfile.bot",
      "package.json",
      "package-lock.json",
      "tsconfig.json",
      "railway.json",
      "railway.bot.json"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "sleepApplication": false
  }
}
