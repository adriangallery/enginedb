{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && cd api && npm install && cd .. && npm run build",
    "watchPatterns": [
      "src/**",
      "api/src/**",
      "api/scripts/**",
      "package.json",
      "api/package.json",
      "package-lock.json",
      "api/package-lock.json",
      "tsconfig.json",
      "api/tsconfig.json",
      "railway.json",
      "nixpacks.toml",
      "Procfile"
    ]
  },
  "deploy": {
    "startCommand": "node dist/src/start-unified.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}
