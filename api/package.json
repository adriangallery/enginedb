{
  "name": "enginedb-api",
  "version": "1.0.0",
  "description": "Backend API con SQLite para enginedb - Compatible con Supabase PostgREST",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc && cp src/db/schema.sql dist/db/",
    "start": "node dist/server.js",
    "migrate": "tsx scripts/migrate.ts",
    "export-supabase": "tsx scripts/export-from-supabase.ts",
    "import-sqlite": "tsx scripts/import-to-sqlite.ts",
    "validate": "tsx scripts/validate-migration.ts",
    "backup": "tsx scripts/backup-to-github.ts",
    "check-records": "tsx scripts/check-records.ts",
    "check-railway": "tsx scripts/check-railway-records.ts",
    "sync-github": "tsx scripts/sync-db-to-github.ts"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
