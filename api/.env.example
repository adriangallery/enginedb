# Configuración del servidor
PORT=3000
NODE_ENV=development

# Ruta a la base de datos SQLite
DB_PATH=./data/enginedb.sqlite

# API Key para autenticación (genera una segura)
# Ejemplo: openssl rand -base64 32
API_KEY=tu-api-key-segura-aqui

# Orígenes permitidos para CORS (separados por coma)
# Ejemplo: https://marketplace.adrian.xyz,https://activity.adrian.xyz
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Para migración desde Supabase (temporal, solo durante migración)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Para backups a GitHub (opcional)
GITHUB_TOKEN=
GITHUB_REPO=adriangallery/enginedb
BACKUP_INTERVAL_HOURS=6
